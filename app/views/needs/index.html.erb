<p id="notice"><%= notice %></p>

<h1>Listing Needs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Posted at</th>
      <th>Description</th>
      <th>Amount requested</th>
      <th>Amount donated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @needs.each do |need| %>
      <tr>
        <td><%= need.title %></td>
        <td><%= need.posted_at %></td>
        <td><%= need.description %></td>
        <td><%= need.amount_requested %></td>
        <td><%= need.amount_donated %></td>
        <td><%= link_to 'Show', need %></td>
        <td><%= link_to 'Edit', edit_need_path(need) %></td>
        <td><%= link_to 'Destroy', need, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

